@*@inject  ConsoleAppcore.Repository.IBookRepository _bookrepo*@
@using Microsoft.Extensions.Configuration  
@inject IConfiguration _configuration
@inject Microsoft.Extensions.Options.IOptionsSnapshot<NewBookAlertConfig> _newBookAlertconfiguration
@{ 
    var newBookAlertconfiguration = _newBookAlertconfiguration.Get("Internal book");
    var thirdPartyBookAlterconfiguration = _newBookAlertconfiguration.Get("ThirdPartyBook");
}
<header>
    <nav class="navbar navbar-expand-lg navbar-light bg-light">

        <img src="~/images/logo.jpg" width="30" height="30" asp-append-version="true" />

        <a class="navbar-brand" href="#">@_configuration["AppName"]</a>
        <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarNav" aria-controls="navbarNav" aria-expanded="false" aria-label="Toggle navigation">
            <span class="navbar-toggler-icon"></span>
        </button>
        <div class="collapse navbar-collapse" id="navbarNav">
            <ul class="navbar-nav">
                <li class="nav-item active">
                    <a class="nav-link" asp-controller="Home" asp-action="Index">Home <span class="sr-only">(current)</span></a>
                </li>
                <li class="nav-item">
                    <a class="nav-link" asp-controller="Home" asp-action="ContactUs">ContactUs</a>
                </li>
                <li class="nav-item">
                    <a class="nav-link" asp-controller="Home" asp-action="ABoutUs">ABoutUs</a>
                </li>
                <li class="nav-item">
                    <a class="nav-link" asp-controller="Book" asp-action="GetAllBooks">All Books</a>
                </li>
                <li class="nav-item">
                    <a class="nav-link" asp-controller="Book" asp-action="AddnewBook">Add new Book</a>
                </li>
                @*<li class="nav-item">
                        <a class="nav-link disabled" href="#" tabindex="-1" aria-disabled="true">Disabled</a>
                    </li>*@
            </ul>
        </div>
    </nav>
    @if (newBookAlertconfiguration.DisplayNewBookAlert)
    {
        <div class="alert alert-info" role="alert">
            @(newBookAlertconfiguration.BookName)
        </div>
    }
    @if (thirdPartyBookAlterconfiguration.DisplayNewBookAlert)
    {
        <div class="alert alert-info" role="alert">
            @(thirdPartyBookAlterconfiguration.BookName)
        </div>
    }



</header>

